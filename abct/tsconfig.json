{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "../out/abct",
    "lib": ["ES2020"],
    "sourceMap": true,
    "rootDir": ".",
    "strict": true,
    "composite": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "types": ["node", "mocha"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "out", "tests"],
  "references": [
    { "path": "../parse" }
  ]
}
