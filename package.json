{
  "name": "abc-monorepo",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "parse",
    "native",
    "abc-lsp-server",
    "abc-cli",
    "vscode-extension",
    "abct",
    "abct2"
  ],
  "scripts": {
    "build": "npm run build:parse && npm run build:abct && npm run build:abct2 && npm run build:native && npm run build:lsp && npm run build:cli && npm run build:vscode",
    "build:parse": "npm run build -w parse",
    "build:abct": "npm run build -w abct",
    "build:abct2": "npm run build -w abct2",
    "build:native": "npm run build -w abc-musesampler-native",
    "build:lsp": "npm run build -w abc-lsp-server",
    "build:cli": "npm run build -w abc-cli",
    "build:vscode": "npm run build -w vscode-extension",
    "watch:parse": "npm run watch -w parse",
    "watch:lsp": "npm run watch -w abc-lsp-server",
    "watch:cli": "npm run watch -w abc-cli",
    "watch:vscode": "npm run watch -w vscode-extension",
    "package:vscode": "npm run package -w vscode-extension",
    "test": "result=0; npm run test -w parse || result=1; npm run test -w abct || result=1; npm run test -w abct2 || result=1; exit $result",
    "lint": "npm run lint -w parse && npm run lint -w abc-lsp-server",
    "lint:fix": "npm run lint:fix -w parse && npm run lint:fix -w abc-lsp-server",
    "format": "prettier --write \"**/*.{ts,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,js,json,md}\""
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@jest/globals": "^29.3.1",
    "@types/chai": "^4.3.4",
    "@types/lodash": "^4.17.16",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^6.11.0",
    "@typescript-eslint/parser": "^6.11.0",
    "abcjs": "^6.5.2",
    "chai": "^4.3.7",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-config-standard-with-typescript": "^39.1.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.3.1",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.3.1",
    "lint-staged": "^13.1.0",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.0.5",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.1",
    "tsx": "^4.21.0",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "fast-check": "^4.0.0",
    "lodash": "^4.17.21",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.11"
  }
}
