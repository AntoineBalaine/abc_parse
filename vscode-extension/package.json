    "configuration": {
      "title": "abc",
      "properties": {
        "abc.midiInput.input": {
          "type": "string",
          "default": "",
          "group": "MIDI Input",
          "description": "MIDI Device used for input. If none specified, the first valid device is used. After changing, please run the `abc: MIDI Input: Restart MIDI Input` command. You can alternatively use the command `abc: MIDI Input: Set output device` to select a device from a list.",
          "scope": "resource"
        },
        "abc.midiInput.chordMode": {
          "type": "boolean",
          "default": false,
          "group": "MIDI Input",
          "description": "Chord mode in music entry. Registers notes that are pressed and held together as a chord instead of sequential notes.",
          "scope": "resource"
        },
        "abc.renderer.responsive": {
          "type": "string",
          "default": "resize",
          "enum": [
            "",
            "resize"
          ],
          "group": "Renderer",
          "description": "Responsive rendering mode. 'resize' adapts to container width.",
          "scope": "resource"
        },
        "abc.renderer.print": {
          "type": "boolean",
          "default": false,
          "group": "Renderer",
          "description": "Enable print formatting mode.",
          "scope": "resource"
        },
        "abc.renderer.oneSvgPerLine": {
          "type": "boolean",
          "default": false,
          "group": "Renderer",
          "description": "Render each stave system as a separate SVG.",
          "scope": "resource"
        },
        "abc.renderer.jazzchords": {
          "type": "boolean",
          "default": false,
          "group": "Renderer",
          "description": "Use jazz-style chord symbol formatting.",
          "scope": "resource"
        },
        "abc.renderer.showDebug": {
          "type": "boolean",
          "default": false,
          "group": "Renderer",
          "description": "Show debug grid and boxes.",
          "scope": "resource"
        },
        "abc.renderer.tablature": {
          "type": "string",
          "default": "",
          "enum": [
            "",
            "Violin",
            "Guitar"
          ],
          "group": "Renderer",
          "description": "Show tablature for the specified instrument.",
          "scope": "resource"
        },
        "abc.renderer.visualTranspose": {
          "type": "integer",
          "default": 0,
          "minimum": -12,
          "maximum": 12,
          "group": "Renderer",
          "description": "Transpose the rendered score by semitones.",
          "scope": "resource"
        },
        "abc.renderer.showTransposedSource": {
          "type": "boolean",
          "default": false,
          "group": "Renderer",
          "description": "Show transposed ABC source code.",
          "scope": "resource"
        }
      }
    },
    "languages": [
      {
        "id": "abc",
        "aliases": [
          "abc",
          "ABC"
        ],
        "extensions": [
          ".abc",
          ".abcx"
        ],
        "capabilities": {
          "documentFormattingProvider": "true"
        },
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "abc",
        "scopeName": "source.abc",
        "path": "./abcjs-renderer/abc.tmGrammar.json"
      }
    ]
